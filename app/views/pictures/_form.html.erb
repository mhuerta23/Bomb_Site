<%= form_for(@picture) do |f| %>
<% if @picture.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

  <ul>
    <% @picture.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="form-wrapper">
  <div class="" style="margin: 0 40px">
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name, {:class => 'width-100'} %>
    </div>
    <div class="field">
      <label for="picture_url">Image URL(We recommend imgur)</label><br>
      <%= f.text_field :url, {:class => 'width-100'} %>
    </div>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description, {:class => 'width-100 desc'} %>
    </div>
    <div class="field">
      <%= f.label :tag %><br>
      <%= f.text_field :tag, {:class => 'width-100'} %>
    </div>
    <div class="field">
      <% f.text_field :like, {:class => 'width-100'} %>
    </div>

    <div class="actions">
      <%= f.submit %>
      
    </div>
  </div>
  <% end %>
</div>

