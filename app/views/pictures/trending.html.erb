 <div class="bottom-panel" style="margin: 10px auto">
    <div class="row fp-row" style="">
    <% @trending_pictures.each do |picture| %>
      <div class="col-lg-3 fp-image" style="margin: 10px auto">
        <%= link_to image_tag(picture.url, :width => 300, :height => 260), picture, :class => 'nil' %>
        <%= link_to picture.name, picture_path(picture) %>
      </div>
    <% end %>
    </div>